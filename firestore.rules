rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: Deny all client access
    // All operations go through backend API with Admin SDK
    // Admin SDK bypasses these rules, so this is a safety net
    // 
    // Collections managed by API:
    // - students, supervisors, admins, users
    // - applications, projects
    // - partnership_requests (student partnerships)
    // - supervisor-partnership-requests (supervisor partnerships)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

