{
  "name": "mentor-match",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:unit": "jest --testNamePattern='\\[Unit\\]'",
    "test:component": "jest --testNamePattern='\\[Component\\]'",
    "test:integration": "jest --testNamePattern='\\[Integration\\]'",
    "test:firebase": "jest --testNamePattern='Firebase'",
    "test:auth": "jest lib/__tests__/auth.test.ts",
    "test:services": "jest lib/services/",
    "test:dashboard": "jest app/dashboard/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:student": "playwright test student-flow",
    "test:e2e:supervisor": "playwright test supervisor-flow",
    "test:e2e:admin": "playwright test admin-flow",
    "prepare": "husky"
  },
  "dependencies": {
    "firebase": "^12.6.0",
    "next": "14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.33",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "overrides": {
    "glob": "^10.0.0"
  }
}
